<Page x:Class="CloudyWing.MoneyTrack.Tools.EntityGenerator.SqlPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CloudyWing.MoneyTrack.Tools.EntityGenerator"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="800"
      Title="SqlPage">
    <Grid>
        <TextBox Text="{Binding Namespace}" HorizontalAlignment="Left" Margin="25,25,25,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" />
        <TextBox Text="{Binding ClassName}" HorizontalAlignment="Left" Margin="25,50,25,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" />
        <TextBox Text="{Binding Sql}"  HorizontalAlignment="Left" Margin="25,75,25,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="725" Height="250"/>
        <Button Content="產生" HorizontalAlignment="Left" Margin="25,350,25,0" VerticalAlignment="Top" Height="25" Width="100" Command="{Binding SubmitCommand}" />
    </Grid>
</Page>
