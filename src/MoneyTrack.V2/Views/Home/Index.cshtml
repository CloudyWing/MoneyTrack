@model CloudyWing.MoneyTrack.Models.Application.HomeModel.IndexViewModel
@{
    ViewBag.Title = "登入";
}

<h1>@PageTitle</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            @using (Html.BeginForm("Index", "Home")) {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-floating mb-3">
                    @Html.EditorFor(x => x.UserId)
                    @Html.ValidationMessageFor(x => x.UserId)
                    @Html.LabelFor(x => x.UserId)
                </div>
                <div class="form-floating mb-3">
                    @Html.EditorFor(x => x.Password)
                    @Html.ValidationMessageFor(x => x.Password)
                    @Html.LabelFor(x => x.Password)
                </div>
                <div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">登入</button>
                </div>
            }
        </section>
    </div>
</div>