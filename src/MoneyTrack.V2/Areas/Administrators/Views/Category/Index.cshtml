@using CloudyWing.MoneyTrack.Areas.Administrators.Models.CategoryModel

@model IndexViewModel
@{
    Layout = "~/Areas/Administrators/Views/Shared/_QueryLayout.cshtml";
}

@section QueryFields {
    <div class="row mb-3">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 col-form-label" })
        <asp:Label runat="server" ID="lblName" AssociatedControlID="txtName" CssClass="col-sm-2 col-form-label" Text="分類名稱"></asp:Label>
        <div class="col-sm-10">
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { type = "Search" } })
        </div>
    </div>
}

@section QueryButtons {
    <button type="submit" formaction="@Url.Action("Index")" class="btn btn-primary">查詢</button>
}

@section Buttons {
    @Html.ButtonLink("新增", "Create")
}

@Html.Action("GetList", Model.PrevViewModel ?? Model)
