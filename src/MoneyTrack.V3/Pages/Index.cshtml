@page
@model IndexModel
@{
    ViewBag.Title = "登入";
}

<h1>@Model.Title</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post" asp-page="Index">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input!.UserId" type="text" class="form-control" />
                    <span asp-validation-for="Input!.UserId"></span>
                    <label asp-for="Input!.UserId"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input!.Password" type="password" class="form-control" />
                    <span asp-validation-for="Input!.Password"></span>
                    <label asp-for="Input!.Password"></label>
                </div>
                <div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">登入</button>
                </div>
            </form>
        </section>
    </div>
</div>
